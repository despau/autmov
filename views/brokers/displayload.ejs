<% include ../partials/header/member-header %>

        <div class="jumbotron text-center bg-dark m-3">
                <div class="container">
                        <h1 class="mt-3 text-light">All Loads Posted</h1>
                        <div class="container">
                                <a href="/broker/loads/new" class="btn btn-success btn-lg my-3">Post A Load</a>
                        </div>
                </div>
        </div>
        <div class="row container p-2 m-2">
                <table class="table table-light m-2">
                        <tr>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">City</th>
                                <th scope="col">State</th>
                                <th scope="col">Zip</th>
                                <th scope="col">Pickup</th>
                                <th scope="col">Dropoff</th>
                                <th scope="col">team?</th>
                                <th scope="col">rate</th>
                                <th scope="col">notes</th>
                                
                        </tr>
                        <% var i = 0 %>
                        <% loads.forEach((load)=>{ %>
                                <tr>
                                                <th scope="row"><%= i %><input type="checkbox" name="chk_rowSelector"></th>       
                                                <td><%=load.name %></td>
                                                <td ><%=load.origin.city %></td>
                                                <td ><%=load.origin.etat %></td>
                                                <td ><%=load.origin.Zip %></td>
                                                <td><%=load.pickDate%></td>
                                                <td><%=load.dropDate %></td>
                                                <td><%=load.requireTeam %></td>
                                                <td><%=load.rate %></td>
                                                <td><%=load.notes %></td>
                                                <% i++%>    
                                </tr>
                        <% }); %>
                        
                </table>
        </div>

<% include ../partials/footer/footer %>